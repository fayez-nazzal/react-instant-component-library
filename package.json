{
  "name": "react-rollup-component-library",
  "version": "1.0.0",
  "description": "A boilerplate for a component library using rollup, typescript, storybook, sass, jest, eslint, prettier and stylelint.",
  "license": "MIT",
  "main": "build/index.js",
  "module": "build/index.esm.js",
  "testEnvironment": "jsdom",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "test:watch": "jest --watch",
    "generate": "node ./util/create-component",
    "prepublishOnly": "npm run build",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prettier": "prettier --write src/**/*.{js,tsx,scss}",
    "eslint": "eslint ./**/*.{js,tsx,scss}",
    "stylelint": "stylelint \"**/*.{css,scss}\"",
    "lint": "npm run test && npm run prettier && npm run eslint && npm run stylelint"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-interactions": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/builder-webpack5": "^6.4.19",
    "@storybook/manager-webpack5": "^6.4.19",
    "@storybook/react": "^6.4.19",
    "@storybook/testing-library": "^0.0.9",
    "@svgr/webpack": "^6.2.1",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.3",
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.39",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "babel-loader": "^8.2.3",
    "babel-preset-react-app": "^10.0.1",
    "css-loader": "^6.7.0",
    "eslint": "^8.10.0",
    "eslint-plugin-react": "^7.29.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "node-sass": "^7.0.1",
    "postcss": "^8.4.8",
    "pre-commit": "^1.2.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.69.2",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-node-externals": "^4.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.5.3",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard-scss": "^3.0.0",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5",
    "url-loader": "^4.1.1",
    "webpack": "5"
  },
  "dependencies": {},
  "pre-commit": [
    "lint"
  ]
}
